<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HuntFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/hunt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="365dp"
        android:layout_height="233dp"
        android:layout_marginTop="8dp"
        android:text="1976 Formula 1 Dünya Şampiyonası'nı kazanmıştır. Yarış pilotluğundan ayrıldıktan sonra medya yorumculuğu ve iş adamlığı yapmıştır. Kadınlara olan düşkünlüğü ile Formula 3 ve Formula 1'de ün salmış bir yarışçı olmuştur.  James, &quot;Hunt the Shunt&quot; -F3’teki korkunç kazalar dizisi yüzünden kendisine takılan- lakabını üzerinden attığında Grand Prix arenasına çıkmaya imkân buldu. Hemen ardından Lord Hesketh’in bağımsız F1 takımına katıldı ve Zandvoort’taki Hollanda GP’sini Niki Lauda’nın önünde lider bitirdi."
        android:textColor="#000000"
        android:fontFamily="@font/oxygenlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="James HUNT"
        android:fontFamily="@font/oxygenbold"
        android:textColor="@color/themeColor"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />
</androidx.constraintlayout.widget.ConstraintLayout>